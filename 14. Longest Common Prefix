class Solution {
    public String longestCommonPrefix(String[] strs) {
        Arrays.sort(strs);
        String first = strs[0];
        String last = strs[strs.length - 1];
        int index = 0;
        for (int i = 0; i < first.length(); i++) {
            if (i >= last.length() || last.charAt(i) != first.charAt(i)){
                return first.substring(0,index);
            } else {
                index++;
            }
        }
        return first.substring(0,index);
    }
}
